<div class="crew-positions-page">
  {{#each positions}}
  <section class="position" data-position-id="{{@key}}" data-drag="true">
    <fieldset class="shares">
      <label for="{{@key}}-shares">Shares</label>
      <input
        id="{{@key}}-shares"
        type="number"
        min="0"
        value="{{this.shares}}"
        data-position-id="{{@key}}"
        class="shares" />
    </fieldset>
    <details>
      <summary>{{this.title}}</summary>
      <p>{{this.desc}}</p>
    </details>
    {{#if this.actors}}
      <table class="crew-assignments">
        <tbody>
          {{#each this.actors}}
          <tr>
            <td class="img">
              <img src="{{this.img}}" alt="{{this.name}}" />
            </td>
            <td class="name">
              {{this.name}}
            </td>
            <td class="actions">
              <button
                type="button"
                class="remove-crew"
                data-position-id="{{@../key}}"
                data-actor-id="{{this.id}}"
                title="Remove from position">
                <i class="fa-solid fa-trash"></i>
              </button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p class="sans">{{this.sans}}</p>
    {{/if}}
  </section>
  {{/each}}
</div>
